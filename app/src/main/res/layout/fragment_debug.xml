<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent" >

    <!--android:background="@android:color/transparent"-->

    <!-- TODO put surface view here -->

    <com.vitorpamplona.netrometer.activity.views.EasyPlotter
        android:id="@+id/debug_plotting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent" >

            <TextView
                android:id="@+id/debug_coefficients_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="#ffea9a0b"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/debug_current_results_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="#ffea2c4c"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:textSize="12sp"  />

            <TextView
                android:id="@+id/debug_sample_results_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="empty"
                android:textColor="#ff3aea64"
                android:paddingLeft="20dp"
                android:paddingRight="0dp"
                android:textSize="12sp"  />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/debug_zero_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zero"
                    android:textSize="30sp"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/debug_calibrate_open_close_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cal"
                    android:textSize="30sp"
                    android:typeface="serif" />

            <Button
                android:id="@+id/debug_PD_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PD"
                android:textSize="30sp"
                android:typeface="serif" />

            <Button
                android:id="@+id/debug_sphere_cyl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sph"
                android:textSize="30sp"
                android:typeface="serif" />

            </LinearLayout>

            <Button
                android:id="@+id/debug_calibrate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="30sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/debug_load_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Default"
                    android:textSize="20sp"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/debug_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textSize="20sp"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/debug_results_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Results"
                    android:textSize="20sp"
                    android:typeface="serif" />

                </LinearLayout>>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>